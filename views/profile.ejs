<style>
	.main_cont{
		display: flex;
		flex-flow: row wrap;
		width: 100%;
		flex-grow: 1;
	}
	.card{
		margin: auto;
		min-width: 400px;
		width: 49%;
		height: 650px;
		overflow: auto;
	}
	.timeline {
    	padding-left: 25px;
		margin: 3px;
	}
	.timeline-item{
		margin: 4px;
	}
	.my_prof{
		margin-left: 4px;
	}
</style>
<div class="container-fluid p-0">
	<h1 class="h3 mb-3 my_prof">
		<% if(emp_id == 0){ %> Sample Profile
		<% }else{ %> My Profile <% } %>
	</h1>
	<div class="main_cont">
		<div class="card mb-3">
			<div class="card-header">
				<h4>Personal Details</h4>
			</div>
			<% if(emp_id == 0){
				my_fullname = 'Full Name';
				my_job_title_name = 'Job Title Name';
				my_birthdate = 'Birth date';
				my_martial_status = 'Martial status(Single/married)';
				my_dept_name = 'Department name';
				my_emp_status = 'Employee status - Employee status type';
				my_pay_grade_level_title = 'Pay Grade Level Title';
			}else{ 
					my_detail.forEach(function(Det){ 
						my_fullname = Det.fullname;
						my_job_title_name = Det.job_title_name;
						my_birthdate = Det.birthdate;
						my_martial_status = Det.marital_status;
						my_dept_name = Det.name;
						my_emp_status = Det.emp_status + ' - ' + Det.emp_status_type;
						my_pay_grade_level_title = Det.pay_grade_level_title;
					})
			}%>
			<div class="card-body text-center">
				<img src="img/avatars/avatar-4.jpg" alt="Christina Mason" class="img-fluid rounded-circle mb-2" width="128" height="128" />
				<h5 class="card-title mb-0">
					<%= my_fullname %>
				</h5>
				<div class="text-muted mb-2">
					<%= my_job_title_name  %>
				</div>
			</div>
			<hr class="my-0" />
			<div class="card-body">
				<strong>About</strong>
				<div>
					<ul class="list-unstyled mb-0 timeline">
						<li class="mb-1 timeline-item"><span data-feather="calendar" class="feather-sm mr-1"></span> Born on <%= my_birthdate %></li><br>
						<li class="mb-1 timeline-item"><span data-feather="map-pin" class="feather-sm mr-1"></span> Lives in </li><br>
						<li class="mb-1 timeline-item"><span data-feather="briefcase" class="feather-sm mr-1"></span> <%= my_martial_status %></li>	<br>	
					</ul>
				</div>
			</div>
			<hr class="my-0" />
			<div class="card-body">
				<strong>Custom Fields</strong>
				<div class="timeline">
				<% if(emp_id == 0){ %>
					<h4 class="card-title mb-0 timeline-item">Custom field name : Custom field value</h4><br>
				<% }else{ 
					if(eme_res.length > 0){
						cus_res.forEach(function(Det){ %>
							<h4 class="card-title mb-0 timeline-item"><%= Det.custom_field %></h4><br>
						<% })
					}else{ %>
						<h4 class="card-title mb-0 timeline-item">Not Given</h4><br>
					<% }
				 } %>
				</div>
			</div>
			<hr class="my-0" />
			<div class="card-body">
				<strong>Emergency Contact Details</strong>
				<div class="timeline">
				<% if(emp_id == 0){ %>
					<h4 class="card-title mb-0 timeline-item">Field name : Field value</h4><br>
				<% }else{ 
						if(eme_res.length > 0){
							eme_res.forEach(function(Det){ %>
								<h4 class="card-title mb-0 timeline-item"><%= Det.con_detail %></h4><br>
							<% })
						}else{ %>
							<h5 class="card-title mb-0 timeline-item">Not Given</h5><br>
						<% }
					} %>
				</div>
			</div>
			<hr class="my-0" />
		</div>
		<div class="card mb-3">
			<div class="card-header">
				<h4>Employment Details</h4>
			</div>
			<hr class="my-0" />

			<div class="card-body">
				<strong>Department</strong>
				<div class="timeline"><h4 class="card-title mb-0 timeline-item"><%= my_dept_name %></h4><br></div>
			</div>
			<hr class="my-0" />

			<div class="card-body">
				<strong>Employment Status</strong>
				<div class="timeline"><h4 class="card-title mb-0 timeline-item"><%= my_emp_status %></h4><br></div>
			</div>
			<hr class="my-0" />

			<div class="card-body">
				<strong>Pay Grade Level</strong>
				<div class="timeline"><h4 class="card-title mb-0 timeline-item"><%= my_pay_grade_level_title %></h4><br></div>
			</div>
			<hr class="my-0" />

			<div class="card-body">
				<strong>Supervisor and Subordinates</strong>
				<% if(emp_id == 0){ %>
					<div class="timeline">
						<div class="card_body timeline-item">
							<h2 class="card-title mb-0">My Supervisor </h2><br>
							<div class="timeline"><h3 class="card-title mb-0 timeline-item">Supervisor Name </h3><br></div>
						</div>
						<div class="card_body timeline-item">
							<h2 class="card-title mb-0">My Subordinates </h2><br>
							<div class="timeline">
								<h3 class="card-title mb-0 timeline-item">Subordinate name 1 </h3><br>
								<h3 class="card-title mb-0 timeline-item">Subordinate name 2 </h3><br>
								<h3 class="card-title mb-0 timeline-item">....... </h3><br>
							</div>
							
						</div>
					</div>
					
				<% }else{ %>
					<div class="timeline">
						<div class="card_body timeline-item">
							<h2 class="card-title mb-0">My Supervisor </h2><br>
							<div class="timeline">
								<% if(sup_det.length > 0){
									sup_det.forEach(function(Det){ %>
										<h3 class="card-title mb-0 timeline-item"><%= Det.sup_name %> </h3><br>				
									<% })
								}else{ %>
									<h3 class="card-title mb-0 timeline-item">No supervisor found</h3><br>
								<% } %>
							</div>
						</div>
						<div class="card_body timeline-item">
							<h2 class="card-title mb-0">My Subordinates </h2><br>
							<div class="timeline">
								<% if(sub_det.length > 0){
									sub_det.forEach(function(Det){ %>
										<h3 class="card-title mb-0 timeline-item"><%= Det.sub_names %> </h3><br>					
									<% })
								}else{ %>
									<h3 class="card-title mb-0 timeline-item">No Subordinates found</h3><br>
								<% } %>
							</div>
						</div>
					</div>
				<% } %>
			</div>				
		</div>		 
	</div>
</div>