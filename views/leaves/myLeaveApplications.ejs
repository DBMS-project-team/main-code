<div class="container-fluid p-0">
    <div class="card container">
        <div class="card-header">
            <h3 style="font-family:verdana;">My applications</h3>
            <a href="#/leaves/newApplication" class="btn btn-primary gap-2 md">Add New Application</a>
        </div>
        <div class="progress mb-3">
            <div class="progress-bar bg-primary" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                Default
            </div>
        </div>
        <table class="table table-striped table-hover" datatable="false" db_table="leave_applications" db_primary_column='["emp_id", "apply_date_time"]'>
            <thead>
                <tr>
                    <th style="width: 30px;"></th>
                    <th>Leave Type</th>
                    <th>Applied Date</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Period (# of days)</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>  
            </thead>
            <tbody> 
                <% var id=0 %>
                <% applications.forEach(function(res){ %>
                    <tr data-id='["<%= emp_id %>", "<%= res.leave_from %>"]'>
                        <td><%= ++id %></td>
                        <td><%= res.leave_type %></td>
                        <td><%= res.formatted_date_time %></td>
                        <td><%= res.formatted_leave_from %></td>
                        <td><%= res.formatted_leave_to %></td>
                        <td><%= res.period %></td> 
                        <td><%= res.title %></td>
                        <% if (res.title == "Sent") { %>
                            <td class="table-action">
                                <a href="#/leaves/editApplication/<%= res.leave_from %>"><i class="align-middle edit_ele" data-feather="edit-2"></i></a>
                            </td>
                        <% }else{ %>
                            <td></td>
                        <% } %>
                    </tr>
                <% }) %> 
            </tbody> 
        </table>
    </div> 
</div> 