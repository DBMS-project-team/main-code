<div class="container-fluid p-0">
    <div class="card container">
        <div class="card-header">
            <h3 style="font-family:verdana;">Departments</h3>
        </div>
        <table class="table table-striped table-hover" datatable="true" db_table="departments" db_primary_column="dept_id" popup-edit="1">
            <thead>
                <tr>
                    <th style="width: 30px;">#</th>
                    <th db_column="name">Department Name</th>
                    <th>Actions</th>
                </tr>  
            </thead>
            <tbody>
                <% var id=0 %>
                <% departments.forEach(function(dep){ %>
                    <tr data-id="<%= dep.dept_id %>">
                        <td><%= ++id %></td>
                        <td><%= dep.name %></td>
                        <td class="table-action">
                            <a href="#"><i class="align-middle edit_ele" data-feather="edit-2"></i></a>
                            <a href="#"><i class="align-middle del_ele" data-feather="trash"></i></a>
                        </td>
                    </tr>
                <% }) %> 
            </tbody>
        </table>
        <div class="row g-3 align-items-center">
            <form action="/auth/form_submit/add_new_department">
                <div class="row p-2">
                    <div class="col-auto">
                        <label for="add_new_department" class="col-form-label">Add new Department</label>
                    </div>
                    <div class="col-auto">
                        <input type="text" name="value" id="add_new_department" class="form-control" aria-describedby="passwordHelpInline" required>
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-primary" type="submit">Add</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div> 