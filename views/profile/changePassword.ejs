<div class="content container-fluid p-0">
    <div class="card">
    <div class="card-header">
            <h3 class="card-title mb-0">RESET PASSWORD</h3>
        </div>
        <div class="card-body">
        
            <form page_after_submit= "profile/profile" action="/auth/form_submit/employees/userChangePassword">
                <input type="text" id="emp_id" name="emp_id" value="<%= users.emp_id %>" hidden>
                <input type="text" id="old_pass" name="old_pass" value="<%users.password%>" hidden>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="inputPasswordCurrent">Current password</label>
                    <div class="col-sm-10">
                        <input type="password" name="current_password" class="form-control" id="inputPasswordCurrent" placeholder="Enter Current Password" required >
                       
                    </div>
                </div>     
               
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="inputPasswordNew">New password</label>
                    <div class="col-sm-10">
                        <input type="password" name="new_password" class="form-control" id="inputPasswordNew" placeholder="Enter New Password" required>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="inputPasswordNew2">Confirm password</label>
                    <div class="col-sm-10">
                        <input type="password" name="confirm_password" class="form-control" id="inputPasswordNew2" placeholder="Re-Enter New Password" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <input type="hidden" id="emp_id" name="emp_id" value="<%= users.emp_id %>">
                    </div>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary" > Cancel</button>
                    <button type="submit" class="btn btn-primary" >Reset</button>

                </div>
                
            </form>
            
        </div>

    </div>
</div>
