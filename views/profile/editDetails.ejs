<div class="content container-fluid p-0">
    <div class="card">

        <div class="card-header">
            <h3 class="card-title mb-0">EDIT DETAILS</h3>
        </div>
        <div class="card-body">
            <form page_after_submit="/profile/profile" action="/auth/form_submit/employees/userEditDetails">
                <input type="text" id="emp_id" name="emp_id" value="<%= users.emp_id %>" hidden>
                <input type="text" id="pass" name="pass" value="<%users.password%>" hidden>
                <!-- <input type="text" id="old_first_name" name="old_first_name" value="<%users.firstname%>" hidden>
                <input type="text" id="old_last_name" name="old_last_name" value="<%users.lastname%>" hidden> -->

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="inputUserName">User Name</label>
                    <div class="col-sm-10">
                        <input type="text" name="user_name" class="form-control" id="inputUserName" value="" required>
                    </div>
                </div>  

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="inputFirstName">First Name</label>
                    <div class="col-sm-10">
                        <input type="text" name="first_name" class="form-control" id="inputFirstName" >
                    </div>
                </div>  

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="inputLastName">Last Name</label>
                    <div class="col-sm-10">
                        <input type="text" name="last_name" class="form-control" id="inputLastName"  >
                    </div>
                </div>  
                
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="inputPassword">Password</label>
                    <div class="col-sm-10">
                        <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Enter Password" required>
                    </div>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary" > Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>

    </div>
</div>